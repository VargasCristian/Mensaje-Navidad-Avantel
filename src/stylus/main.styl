@import "nib"
@import 'normalize.css'

*
    padding 0
    margin 0
    
body
    font-size 17px
    font-family sans-serif
    color #333
    background #eee
    max-width 600px
.mensaje
    box-sizing border-box
    width 100%
    max-width 600px
    position relative
    &__background
        width 100%
        position absolute
        padding 0
        margin 0
        left 0
        top 0
        
        img
            max-width 100%
.mensaje__body
    text-align center
    margin-bottom 4em
    span
        font-size 2em

.mensaje__item
    background #ec008c
    padding .5em 1em
    width 350px
    margin 1em auto
    color #fff
    position relative
    font-size 1.5em

.itemDos
    margin-top 2.5em
    
.bg_black
    background #151922
    z-index 200
    font-size 1.1em
    padding .3em 1.5em
    position relative
    z-index 300
    color #fff
    top -2em

.mensaje__footer
    font-size 12px
    box-sizing border-box
    padding 1.5em
    
    strong 
        font-size 1.2em
.justify
    text-align justify

a
    color #ec008c
    font-size 1.3em
    text-decoration none
    font-weight bold
        